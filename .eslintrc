{
    "extends": [
        "airbnb-base",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "settings": {
        "import/resolver":{ "reactnative": {
            "extensions": [".js", ".jsx", ".ts", ".tsx", ".ios.js", ".android.js", ".ios.ts", ".android.js", ".ios.tsx", ".android.tsx"]
          }}
    },
    "globals": {
        "fetch": true,
        "isNaN": true,
        "test": true,
        "it": true,
        "describe": true,
        "expect": true,
        "jest": true,
        "navigator": true,
        "requestAnimationFrame": true,
        "firebaseLog": true,
        "firebaseBoolKey": true,
        "firebaseStringKey": true,
        "firebaseIntKey": true
    },
    "rules": {
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "prefer-promise-reject-errors": 1,
        "import/prefer-default-export": 0,
        "import/no-extraneous-dependencies": 0,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "import/no-named-as-default": 0,
        "import/extensions": 0,
        "import/no-unresolved": ["error", { "ignore": ["@"] }],
        "react/prop-types": 0,
        "react/no-string-refs": 1,
        "react/jsx-key": 0,
        "react/display-name": 0,
        "no-use-before-define": 0,
        "no-confusing-arrow": 0,
        "spaced-comment": 0,
        "no-extend-native": 0,
        "indent": 0,
        "no-tabs": 0,
        "object-curly-newline": 0,
        "class-methods-use-this": 0,
        "no-trailing-spaces": 0,
        "function-paren-newline": 0,
        "no-nested-ternary": 0,
        "consistent-return": 0,
        "no-underscore-dangle": 0,
        "arrow-parens": ["error", "as-needed"],
        "prefer-destructuring": ["error", { "VariableDeclarator": { "object": true } }],
        "max-len": 0,
        "camelcase": 0,
        "no-mixed-operators": 0,
        "no-plusplus": 0,
        "no-console": 2,
        "no-unused-expressions": ["error", { "allowTernary": true }]
    },
    "env": {
        "es6": true,
        "jest/globals": true
    },
    "plugins": ["babel", "react", "import", "jest", "react-hooks"]
}
