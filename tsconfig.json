{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": "./",
        "paths": {
            "*": [
                "*",
                "*.ios",
                "*.android"
            ],
            "@colors": ["constants/Colors"],
            "@layout": ["constants/Layout"]
        }
    }
}
